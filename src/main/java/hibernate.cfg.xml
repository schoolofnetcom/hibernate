<?xml version="1.0" encoding="UTF-8"?>

<hibernate-configuration>
	<session-factory>
		<property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
		<property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="hibernate.connection.url">jdbc:mysql://localhost:3306/hibernate</property>
		<property name="hibernate.connection.username">root</property>
		<property name="hibernate.connection.password"></property>
		<property name="show_sql">true</property>			
		
		<mapping class="com.schoolofnet.model.User"></mapping>							
		<mapping class="com.schoolofnet.model.Address"></mapping>					
		<mapping class="com.schoolofnet.model.Options"></mapping>				
		<mapping class="com.schoolofnet.model.Product"></mapping>							
	</session-factory>
</hibernate-configuration>